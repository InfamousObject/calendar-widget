{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "kentroi/chat",
	"version": "1.0.0",
	"title": "Kentroi Chat",
	"category": "embed",
	"icon": "format-chat",
	"description": "Add a Kentroi AI chatbot to your site.",
	"keywords": ["chat", "chatbot", "ai", "support", "kentroi"],
	"textdomain": "kentroi-for-wordpress",
	"attributes": {
		"mode": {
			"type": "string",
			"default": "inline",
			"enum": ["inline", "floating"]
		},
		"position": {
			"type": "string",
			"default": "bottom-right",
			"enum": ["bottom-right", "bottom-left"]
		},
		"height": {
			"type": "number",
			"default": 500
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"editorScript": "file:./build/index.js",
	"render": "file:./render.php"
}
